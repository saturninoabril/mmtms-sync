{
  "name": "@mattermost/tm-sync",
  "version": "0.1.0",
  "description": "CLI tool for synchronizing Playwright test documentation with Zephyr Scale test management system",
  "keywords": [
    "mattermost",
    "testing",
    "test-management",
    "zephyr-scale",
    "playwright",
    "cli"
  ],
  "author": "Mattermost",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "bin": {
    "tm-sync": "./dist/cli.js"
  },
  "exports": {
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist package-lock.json node_modules",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "@commander-js/extra-typings": "14.0.0",
    "@inquirer/prompts": "7.9.0",
    "axios": "1.13.1",
    "axios-retry": "4.5.0",
    "chalk": "5.6.2",
    "cli-table3": "0.6.5",
    "commander": "14.0.2",
    "cosmiconfig": "9.0.0",
    "fast-glob": "3.3.3",
    "fs-extra": "11.3.2",
    "ora": "9.0.0",
    "ts-morph": "27.0.2",
    "typescript": "5.9.3",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@types/fs-extra": "11.0.4",
    "@types/jest": "30.0.0",
    "@types/node": "22.10.2",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "eslint": "9.39.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.6",
    "nock": "14.0.10",
    "prettier": "3.6.2",
    "rimraf": "6.1.0",
    "ts-jest": "29.4.5",
    "tsup": "8.5.0",
    "tsx": "4.20.6"
  }
}
